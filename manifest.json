{
  "name": "Impera Online Chrome Extension",
  "version": "1.0.2",
  "description": "Be informed",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage", "https://www.imperaonline.de/"],
  "background": {
    "scripts": ["assets/js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "assets/interfaces/popup.html",
    "default_icon": {
      "16": "assets/img/logo0.png",
      "32": "assets/img/logo0.png",
      "48": "assets/img/logo0.png",
      "128": "assets/img/logo0.png"
    }
  },
  "icons": {
    "16": "assets/img/logo0.png",
    "32": "assets/img/logo0.png",
    "48": "assets/img/logo0.png",
    "128": "assets/img/logo0.png"
  },
  "manifest_version": 2
}